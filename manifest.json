{
  "manifest_version": 3,
  "name": "playmahjong",
  "version": "1.0",
  "description": "Enables additional functionality on playmahjong.io",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://playmahjong.io/*"
      ],
      "js": [
        "bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ed0neqbs1@mozmail.com"
    }
  },
  "icons": {
    "48": "icon/icon48.png",
    "96": "icon/icon96.png",
    "128": "icon/icon128.png"
  }
}